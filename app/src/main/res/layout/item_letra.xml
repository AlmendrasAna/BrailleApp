<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#EFDAD0"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/caracter"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="q"
                android:textColor="#046053"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/card_letra"
                app:layout_constraintEnd_toStartOf="@+id/card_letra"
                app:layout_constraintTop_toTopOf="@+id/card_letra" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_letra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3F6E65">

                    <TextView
                        android:id="@+id/uno_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/uno"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/uno" />

                    <ImageView
                        android:id="@+id/uno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/uno_txt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_circle_24" />

                    <TextView
                        android:id="@+id/dos_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/dos"
                        app:layout_constraintStart_toStartOf="@+id/uno_txt"
                        app:layout_constraintTop_toTopOf="@+id/dos" />

                    <ImageView
                        android:id="@+id/dos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/baseline_circle_24"
                        app:layout_constraintStart_toStartOf="@+id/uno"
                        app:layout_constraintTop_toBottomOf="@+id/uno" />

                    <TextView
                        android:id="@+id/tres_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/tres"
                        app:layout_constraintStart_toStartOf="@+id/dos_txt"
                        app:layout_constraintTop_toTopOf="@+id/tres" />

                    <ImageView
                        android:id="@+id/tres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/dos"
                        app:layout_constraintTop_toBottomOf="@+id/dos"
                        app:srcCompat="@drawable/baseline_circle_24" />

                    <TextView
                        android:id="@+id/cuatro_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/cuatro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cuatro" />

                    <ImageView
                        android:id="@+id/cuatro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"

                        app:layout_constraintEnd_toStartOf="@+id/cuatro_txt"
                        app:layout_constraintStart_toEndOf="@+id/uno"
                        app:layout_constraintTop_toTopOf="@+id/uno"
                        app:srcCompat="@drawable/baseline_circle_24" />

                    <TextView
                        android:id="@+id/cinco_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/cinco"
                        app:layout_constraintEnd_toEndOf="@+id/cuatro_txt"
                        app:layout_constraintTop_toTopOf="@+id/cinco" />

                    <ImageView
                        android:id="@+id/cinco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        app:layout_constraintEnd_toEndOf="@+id/cuatro"
                        app:layout_constraintStart_toStartOf="@+id/cuatro"
                        app:layout_constraintTop_toBottomOf="@+id/cuatro"
                        app:srcCompat="@drawable/baseline_circle_24" />

                    <TextView
                        android:id="@+id/seis_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@+id/seis"
                        app:layout_constraintEnd_toEndOf="@+id/cinco_txt"
                        app:layout_constraintTop_toTopOf="@+id/seis" />

                    <ImageView
                        android:id="@+id/seis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/cinco"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/cinco"
                        app:layout_constraintTop_toBottomOf="@+id/cinco"
                        app:srcCompat="@drawable/baseline_circle_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>